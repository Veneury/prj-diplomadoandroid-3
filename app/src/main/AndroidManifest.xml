<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calculadoraprestamos.inc.soft.devers.calculadoraprestamos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/myapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AcercaDe" />
        <activity
            android:name=".CalcularPrestamo"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity android:name=".CuotasPrestamo" />
        <activity android:name=".IntroApp"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
    </application>

</manifest>